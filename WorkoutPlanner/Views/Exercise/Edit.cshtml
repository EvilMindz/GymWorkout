@using WorkoutPlanner.Extensions
@model ViewModels.ExerciseViewModel

@{
    ViewBag.Title = "Edit Exercise";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.NameFrench)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameFrench)
            @Html.ValidationMessageFor(model => model.NameFrench)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NameEnglish)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameEnglish)
            @Html.ValidationMessageFor(model => model.NameEnglish)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MuscleName)
        </div>
        <div class="editor-label">
            @Html.Input().SelectorFor(model => model.MuscleId, Model.ListMuscles)
            @Html.ValidationMessageFor(model => model.ListMuscles)
        </div>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
