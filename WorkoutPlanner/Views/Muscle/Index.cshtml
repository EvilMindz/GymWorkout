@using WorkoutPlanner.Extensions
@model IEnumerable<WorkoutPlanner.ViewModels.MuscleViewModel>

@{
    ViewBag.Title = "Muscle";
}

<h2>Muscle</h2>

<p>
    @Html.Input().ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameEnglish)
        </th>
        <th>@Html.DisplayNameFor(model => model.NameFrench)</th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameEnglish)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameFrench)
        </td>
        <td>
            @Html.Input().ActionLink("Edit", "Edit", null, (new { id=item.Id }))
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
        <td>
            @Html.Input().ActionLink("Delete", "Delete", null, new { id = item.Id }, new { @class="deletebutton"})
        </td>
    </tr>
}

</table>

@section scripts
{
    <script src="~/Scripts/Customs/muscle.js"></script>
}